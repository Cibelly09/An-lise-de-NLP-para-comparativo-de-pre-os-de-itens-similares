"""
comparativo_precos.py
Vers√£o: 1.0
Autor: Cibelly Viegas
Objetivo: Automatizar a compara√ß√£o de pre√ßos entre Smarket e Infomarket
          usando fuzzy matching para encontrar itens similares e gerar
          um relat√≥rio final em Excel.
Como usar:
    - Ajuste os caminhos das pastas (PASTA_SMARKET, PASTA_INFOMARKET, PASTA_OUTPUT)
    - Coloque seus CSVs nas pastas (o script l√™ todos os CSVs dentro do per√≠odo)
    - Rode: python comparativo_precos.py
Depend√™ncias:
    pandas, rapidfuzz, openpyxl, tqdm
    (instale via pip se necess√°rio: pip install pandas rapidfuzz openpyxl tqdm)
"""
import os
import sys
import glob
from datetime import datetime, timedelta
import pandas as pd
from rapidfuzz import process, fuzz
from tqdm import tqdm

# ---------------------- CONFIGURA√á√ÉO ----------------------
# Pastas (ajuste se for necess√°rio)
PASTA_SMARKET = r'K:\Pricing\Indicadores de Promo√ß√£o\Dados\Infomarket\Encartes Smarket'
PASTA_INFOMARKET = r'K:\Pricing\Indicadores de Promo√ß√£o\Dados\Infomarket\Base2infomarket'
PASTA_OUTPUT = r'K:\Pricing\Indicadores de Promo√ß√£o\Dados\Infomarket\Automatizacao\COMPARATIVO'

# Par√¢metros
PERIODO_DIAS = 35            # per√≠odo para filtrar arquivos (√∫ltimos X dias)
LIMITE_SIMILARIDADE = 60     # cutoff de similaridade (0-100)
N_CONCORRENTES = 2           # quantos concorrentes retornar por produto Smarket
CSV_ENCODING = 'utf-8'       # ajuste se precisar
CSV_SEP = ';'                # separador padr√£o de sa√≠da (ajuste para leitura se os arquivos usarem ',')
# -----------------------------------------------------------


def extrair_data_arquivo(nome_arquivo):
    """Tenta extrair uma data no formato YYYY_MM_DD do filename. Retorna datetime ou None."""
    import re
    match = re.search(r'(\d{4}_\d{2}_\d{2})', nome_arquivo)
    if match:
        try:
            return datetime.strptime(match.group(1), '%Y_%m_%d')
        except Exception:
            return None
    return None


def obter_arquivos_validos(pasta, periodo_dias=PERIODO_DIAS, mask="*.csv"):
    """Retorna lista de caminhos de arquivos na pasta dentro do per√≠odo (√∫ltimos periodo_dias)."""
    arquivos = []
    data_maxima = pd.to_datetime('today').normalize()
    data_minima = data_maxima - pd.Timedelta(days=periodo_dias)
    for f in os.listdir(pasta):
        if f.lower().endswith('.csv') or f.lower().endswith('.txt'):
            caminho = os.path.join(pasta, f)
            # tenta extrair data do nome
            data_arq = extrair_data_arquivo(f)
            if data_arq:
                if data_minima <= data_arq <= data_maxima:
                    arquivos.append(caminho)
            else:
                # se n√£o tiver data no nome, usa a modifica√ß√£o do arquivo
                mtime = datetime.fromtimestamp(os.path.getmtime(caminho)).replace(microsecond=0)
                if data_minima <= mtime <= data_maxima:
                    arquivos.append(caminho)
    arquivos.sort()
    return arquivos


def ler_e_concatenar(arquivos, encoding=CSV_ENCODING, sep=','):
    """L√™ lista de arquivos CSV e concatena em um DataFrame."""
    lista = []
    for arq in arquivos:
        try:
            df = pd.read_csv(arq, encoding=encoding, sep=sep, low_memory=False)
            lista.append(df)
        except Exception:
            # tenta leitura sem separator fixo
            try:
                df = pd.read_csv(arq, encoding=encoding, low_memory=False)
                lista.append(df)
            except Exception as e:
                print(f"‚úñ Erro ao ler {arq}: {e}", file=sys.stderr)
    if lista:
        return pd.concat(lista, ignore_index=True, sort=False)
    return pd.DataFrame()


def padronizar_colunas(df):
    """Padroniza nomes de colunas: strip, lower, replace espa√ßos por underscore."""
    df.columns = (df.columns
                  .astype(str)
                  .str.strip()
                  .str.lower()
                  .str.replace(' ', '_')
                  .str.replace('-', '_'))
    return df


def preparar_bases(df_smarket, df_infomarket):
    """Garante colunas relevantes e cria coluna 'produto' padronizada em MAI√öSCULAS."""
    # Cria coluna 'produto' padronizada
    if 'descricao' in df_smarket.columns:
        df_smarket['produto'] = df_smarket['descricao'].astype(str).str.strip().str.upper()
    elif 'produto' in df_smarket.columns:
        df_smarket['produto'] = df_smarket['produto'].astype(str).str.strip().str.upper()
    else:
        # tenta descobrir uma coluna textual relevante
        txt_cols = df_smarket.select_dtypes(include=['object']).columns
        if len(txt_cols) > 0:
            df_smarket['produto'] = df_smarket[txt_cols[0]].astype(str).str.strip().str.upper()
        else:
            df_smarket['produto'] = ''

    if 'item_description' in df_infomarket.columns:
        df_infomarket['produto'] = df_infomarket['item_description'].astype(str).str.strip().str.upper()
    elif 'produto' in df_infomarket.columns:
        df_infomarket['produto'] = df_infomarket['produto'].astype(str).str.strip().str.upper()
    else:
        txt_cols = df_infomarket.select_dtypes(include=['object']).columns
        if len(txt_cols) > 0:
            df_infomarket['produto'] = df_infomarket[txt_cols[0]].astype(str).str.strip().str.upper()
        else:
            df_infomarket['produto'] = ''

    return df_smarket, df_infomarket


def encontrar_preco_concorrente(produto_smarket, df_infomarket, limite=LIMITE_SIMILARIDADE, n=N_CONCORRENTES):
    """
    Retorna at√© n concorrentes do df_infomarket com os campos essenciais.
    Usa rapidfuzz.process.extract com token_sort_ratio.
    """
    # lista de poss√≠veis descri√ß√µes √∫nicos no infomarket
    escolhas = df_infomarket['produto'].dropna().unique().tolist()
    melhores = process.extract(
        produto_smarket,
        escolhas,
        scorer=fuzz.token_sort_ratio,
        limit=30
    )

    resultados = []
    for match_desc, score, _ in melhores:
        if score >= limite:
            # pega a primeira ocorr√™ncia correspondente
            linha = df_infomarket[df_infomarket['produto'] == match_desc].iloc[0]
            dados = {
                'produto_concorrente': match_desc,
                'preco_concorrente': linha.get('price', None),
                'data_inicio': linha.get('validity_start_date', None),
                'data_fim': linha.get('validity_finish_date', None),
                'nome_concorrente': linha.get('network', None),
                'nome_encarte': linha.get('leaflet_name', None),
                'link_encarte': linha.get('images_url', None),
                'score_similaridade': score
            }
            # evitar duplicatas por encarte+rede
            repetido = any(
                (r['nome_concorrente'] == dados['nome_concorrente']) and
                (r['nome_encarte'] == dados['nome_encarte'])
                for r in resultados
            )
            if not repetido:
                resultados.append(dados)
        if len(resultados) >= n:
            break
    return resultados


def gerar_comparativo(df_smarket, df_infomarket, limite=LIMITE_SIMILARIDADE, n=N_CONCORRENTES):
    """Roda o matching e monta o DataFrame final de comparativo."""
    resultados = []
    # Garante que as colunas essenciais existam
    df_infomarket = df_infomarket.copy()
    df_smarket = df_smarket.copy()

    # Se houver coluna de pre√ßo em smarket, detecta nome prov√°vel
    preco_smarket_col = None
    for cand in ['preco_varejo', 'preco_fidelidade', 'meu_preco', 'preco', 'price']:
        if cand in df_smarket.columns:
            preco_smarket_col = cand
            break

    # Se houver coluna de pre√ßo em infomarket, detecta
    preco_inf_col = None
    for cand in ['price', 'preco']:
        if cand in df_infomarket.columns:
            preco_inf_col = cand
            break

    it = df_smarket.iterrows()
    # tqdm para barra de progresso
    for _, row in tqdm(it, total=len(df_smarket), desc='Comparando produtos'):
        desc = row.get('produto', '')
        preco_smarket = row.get(preco_smarket_col, None) if preco_smarket_col else None
        concorrentes = encontrar_preco_concorrente(desc, df_infomarket, limite=limite, n=n)

        if concorrentes:
            for conc in concorrentes:
                diferencia = None
                if (preco_smarket is not None) and (conc.get('preco_concorrente') is not None):
                    try:
                        diferencia = float(preco_smarket) - float(conc['preco_concorrente'])
                    except Exception:
                        diferencia = None
                resultados.append({
                    'produto_smarket': desc,
                    'preco_smarket': preco_smarket,
                    'produto_concorrente': conc.get('produto_concorrente'),
                    'preco_concorrente': conc.get('preco_concorrente'),
                    'nome_concorrente': conc.get('nome_concorrente'),
                    'nome_encarte': conc.get('nome_encarte'),
                    'link_encarte': conc.get('link_encarte'),
                    'data_inicio': conc.get('data_inicio'),
                    'data_fim': conc.get('data_fim'),
                    'score_similaridade': conc.get('score_similaridade'),
                    'diferenca_preco': diferencia,
                    'economia_pct': (diferencia / preco_smarket * 100) if (diferencia is not None and preco_smarket and preco_smarket != 0) else None
                })
        else:
            resultados.append({
                'produto_smarket': desc,
                'preco_smarket': preco_smarket,
                'produto_concorrente': None,
                'preco_concorrente': None,
                'nome_concorrente': None,
                'nome_encarte': None,
                'link_encarte': None,
                'data_inicio': None,
                'data_fim': None,
                'score_similaridade': None,
                'diferenca_preco': None,
                'economia_pct': None
            })
    return pd.DataFrame(resultados)


def salvar_resultado(df_result, pasta_output=PASTA_OUTPUT):
    """Salva Excel com timestamp e retorna caminho do arquivo."""
    os.makedirs(pasta_output, exist_ok=True)
    nome = f"comparativo_precos_{datetime.today().strftime('%Y%m%d_%H%M%S')}.xlsx"
    caminho = os.path.join(pasta_output, nome)
    try:
        df_result.to_excel(caminho, index=False, engine='openpyxl')
        return caminho
    except Exception as e:
        print(f"‚úñ Erro ao salvar resultado: {e}", file=sys.stderr)
        return None


def main():
    print("üîÑ Iniciando automatiza√ß√£o de comparativo de pre√ßos")

    # Obt√©m arquivos v√°lidos de cada pasta
    arquivos_smarket = obter_arquivos_validos(PASTA_SMARKET)
    arquivos_infomarket = obter_arquivos_validos(PASTA_INFOMARKET)

    if not arquivos_smarket:
        print(f"‚ö†Ô∏è Nenhum arquivo Smarket encontrado em: {PASTA_SMARKET} dentro do per√≠odo.")
    if not arquivos_infomarket:
        print(f"‚ö†Ô∏è Nenhum arquivo Infomarket encontrado em: {PASTA_INFOMARKET} dentro do per√≠odo.")

    # L√™ e concatena
    print("üì• Lendo e concatenando arquivos Smarket...")
    df_smarket = ler_e_concatenar(arquivos_smarket, encoding=CSV_ENCODING, sep=',')
    print("üì• Lendo e concatenando arquivos Infomarket...")
    df_infomarket = ler_e_concatenar(arquivos_infomarket, encoding=CSV_ENCODING, sep=',')

    if df_smarket.empty:
        print("‚úñ df_smarket veio vazio. Saindo.")
        return
    if df_infomarket.empty:
        print("‚úñ df_infomarket veio vazio. Saindo.")
        return

    # Padroniza colunas
    df_smarket = padronizar_colunas(df_smarket)
    df_infomarket = padronizar_colunas(df_infomarket)

    # Prepara√ß√µes e colunas 'produto'
    df_smarket, df_infomarket = preparar_bases(df_smarket, df_infomarket)

    print("üîç Iniciando matching fuzzy (isso pode levar um tempo dependendo do volume)...")
    df_resultado = gerar_comparativo(df_smarket, df_infomarket, limite=LIMITE_SIMILARIDADE, n=N_CONCORRENTES)

    print("üì¶ Salvando resultado...")
    caminho = salvar_resultado(df_resultado)
    if caminho:
        print(f"‚úÖ Compara√ß√£o conclu√≠da! Resultado salvo em:\n{caminho}")
    else:
        print("‚úñ N√£o foi poss√≠vel salvar o resultado.")

    print("üîö Processo finalizado.")


if __name__ == "__main__":
    main()
